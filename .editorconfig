root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
# У Markdown часто свідомо використовують подвійний пробіл для переносу рядка,
# але ми його уникаємо (бо потім це "ламає" вирівнювання в DOCX/PDF).
trim_trailing_whitespace = true

[Makefile]
indent_style = tab